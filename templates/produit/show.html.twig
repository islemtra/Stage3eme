{% extends 'base.html.twig' %}

{% block title %}Produit Details{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Produit Details</h1>

        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <tr>
                    <th scope="row">Name</th>
                    <td>{{ produit.name }}</td>
                </tr>
                <tr>
                    <th scope="row">Prix</th>
                    <td>{{ produit.prix }}</td>
                </tr>
            </table>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('produit_index') }}" class="btn btn-outline-secondary">Back to list</a>
            <a href="{{ path('produit_edit', {'id': produit.id}) }}" class="btn btn-outline-warning">Edit</a>

            <form method="post" action="{{ path('produit_delete', {'id': produit.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
                <button class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
{% endblock %}
