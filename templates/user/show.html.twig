{% extends 'base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">User Details</h1>

        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <tr>
                    <th scope="row">Name</th>
                    <td>{{ user.name }}</td>
                </tr>
                <tr>
                    <th scope="row">Login</th>
                    <td>{{ user.login }}</td>
                </tr>
            </table>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('user_index') }}" class="btn btn-outline-secondary">Back to list</a>
            <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-outline-warning">Edit</a>

            <form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this user?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                <button class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
{% endblock %}
