{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Edit User</h1>

        <div class="col-md-6 offset-md-3">
            {{ form_start(form, {'attr': {'class': 'form'}}) }}

                <div class="form-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Enter user name'}}) }}
                </div>
                
                <div class="form-group">
                    {{ form_label(form.login) }}
                    {{ form_widget(form.login, {'attr': {'class': 'form-control', 'placeholder': 'Enter login'}}) }}
                </div>
                
                <div class="form-group">
                    {{ form_label(form.password) }}
                    {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Enter new password (leave blank to keep current)'}}) }}
                </div>
                
                <button class="btn btn-success mt-3">Save</button>

            {{ form_end(form) }}

            <div class="mt-3 text-center">
                <a href="{{ path('user_index') }}" class="btn btn-outline-secondary">Back to list</a>
            </div>
        </div>
    </div>
{% endblock %}
